package com.java.offer;
//翻转单词顺序列
/*
 * 
 */
public class Solution15 {

	public String ReverseSentence(String str){
		if(str == null || str.length() == 0){
			return "";
		}
		char [] ch = str.toCharArray();
		StringBuilder sb = new StringBuilder();
		int i = 0;
		int j = ch.length-1;
		while(i < j){
			char temp = ch[i];
			ch[i] = ch[j];
			ch[j] = temp;
			
			i++;
			j--;
		}
		for(int k=ch.length-1;k > 0; k--){
			sb.append(ch[k]);
		}
		return sb.toString();

	}
	
	

}

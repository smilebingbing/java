package com.java.offer;
//二叉树的深度
/*
 * 问题：输入一棵二叉树，求该树的深度
 * 
 */
public class Solution18 {

public int TreeDepth(TreeNode root) {
        if(root == null){
        	return 0;
        }
        
        int h_left = TreeDepth(root.left);
        int h_right = TreeDepth(root.right);
        return (h_left > h_right) ? (h_left + 1) :(h_right + 1);
    }
}

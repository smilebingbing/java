package mini;

import java.util.Scanner;

import java.util.Scanner;

public class Q51 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		long input = sc.nextLong();
		sc.close();
		long resu = 0;
		long temp = 0;
		for(long i = input;i > 0; i = i / 2) {
			temp = (i + 1)/ 2;
			resu += temp * temp;
		}
		System.out.println(resu);
	}
}

///////用bigInteger做

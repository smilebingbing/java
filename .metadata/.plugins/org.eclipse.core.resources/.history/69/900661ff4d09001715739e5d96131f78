package com.java.offer;
//左旋转字符串
/*
 * 1.
 */
public class Solution14 {

	public String LeftRotateString(String str, int n){
		if(str == null || n > str.length()){
			return "";
		}
		StringBuffer sb = new StringBuffer();
		char [] ch = str.toCharArray();
		for(int i = n; i < ch.length; i++){
			sb.append(ch[i]);
		}
		for(int i = 0; i < n; i++){
			sb.append(ch[i]);
		}
		return sb.toString();
	}
}

		//js解析xml文档的函数，只支持ie
		function parseXml(fileName){
			//创建DOM解析器
			var doc=new ActiveXObject("Microsoft.XMLDOM");
			doc.async="false";
			//加载XML文档，获取XML文档对象
			doc.load(fileName);
			return doc;
		}
	}


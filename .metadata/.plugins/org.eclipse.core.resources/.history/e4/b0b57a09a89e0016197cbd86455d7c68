import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc =new Scanner(System.in);
		while(sc.hasNext()){
		    int N =sc.nextInt();
		    if(N<=0){
		    	System.out.println(-1);
		    }else if(N==1){
		    	System.out.println(2);
		    }else{
		    int n,sum;
		    n=2+(N-1)*3;
		    sum=(1/2)*N*(2+n);
			System.out.println(sum);

		    }
		}
	}

}
